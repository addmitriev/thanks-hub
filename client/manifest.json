{
  "name": "Thanks Hub",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [ "https://github.com/*" ],
      "js": [ "vendor/js/jquery.js",
              "thankshub.js",
              "background.js"
        ],
      "css": ["css/thankshub.css"],  
  	  "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["thankshub.js","background.js"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
        "https://thanks-hub.herokuapp.com/"
    ]
}
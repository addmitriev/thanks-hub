{
  "name": "Thanks Hub",
  "version": "1.0",
  "manifest_version": 2,
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "homepage_url": "https://thanks-hub.herokuapp.com/",
  "content_scripts": [
    {
      "matches": [ "https://github.com/*" ],
      "js": [ "vendor/js/jquery.js",
              "thankshub.js",
              "background.js"
        ],
      "css": ["css/thankshub.css"],  
  	  "run_at": "document_end"
    }
  ],
  "sandbox" : ["iframe.html"],
  "web_accessible_resources": ["thankshub.js","background.js","inject.js", "iframe.html", "icon.png"],
  "permissions": [
        "https://thanks-hub.herokuapp.com/",
        "https://m.sp-money.yandex.ru/oauth/authorize"
    ]
}